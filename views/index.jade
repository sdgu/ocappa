extends layout

block content
	h1= title
	p Welcome to OCAPPA

	// Wrapper
	#wrapper




		h2 Character List

		p Number to display: 
			select#howMany
				option(value="5") 5
				option(value="10") 10
				option(value="25") 25
				option(value="all") All

		#charList
			table
				thead
					th Character Name
					th Author
					th Delete?
				tbody

		
		br
		#charInfo
			h2 Character Info
			table
				tr
					td.titl
						strong Character Name: 
					td
						| <span id="charInfoName"></span>
				tr
					td.titl
						strong Formes: 
					td
						| <span id="charInfoFormes"></span>
				tr
					td.titl
						strong Abilities: 
					td
						| <span id="charInfoAb"></span>
				tr
					td.titl
						strong Description: 
					td
						| <span id="charInfoDesc"></span>
				tr
					td.titl
						strong Author:
					td 
						| <span id="authorName"></span>



		h2 Add Character
		p currently hidden
		#addChar
			fieldset
				h4 Author: 
				input#inputAuthor(type="text" placeholder="Author")
				h4 Character Name: 
				input#inputCharName(type="text" placeholder="Character Name")
				h4 Formes: 
				textarea#inputFormes(placeholder="Formes" rows="10" cols="30")
				br
				h4 Abilities: 
				textarea#inputAbilities(placeholder="Abilities" rows="10" cols="30")
				br
				h4 Description: 
				textarea#inputDesc(placeholder="Description" rows="10" cols="30")
				br
				//-button#btnAddChar Add Character